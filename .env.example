PORT=3000
NODE_ENV=development
SALT_ROUNDS=10
JWT_SECRET=SUPERSECRET
LOG_LEVEL=debug

# Security
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Mailer:
# Для тестирования можно использовать: https://ethereal.email/
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Страницы восстановления забытого пароля
PASSWORD_FORGOT_PAGE=http://localhost:3000/forgot
PASSWORD_RECOVERY_PAGE=http://localhost:3000/reset-password

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=api/v1/docs

# Google Sheets
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_PRIVATE_KEY=

# This was inserted by `prisma init`:
# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

DATABASE_URL=postgresql://postgres:password@localhost:5432/only-hrm

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600